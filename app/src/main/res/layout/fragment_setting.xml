<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        android:layout_weight="1">


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="60dp"
                android:layout_marginTop="20dp">

                <TextView
                    android:id="@+id/userName"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="User Name:"
                    android:textSize="15sp"
                    android:textColor="#000"
                    android:textStyle="normal"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:layout_weight="1"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#F0F0F0"
                    android:layout_marginLeft="14dp"/>

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="60dp">

                <TextView
                    android:id="@+id/userPhone"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="Telephone:"
                    android:textSize="15sp"
                    android:textColor="#000"
                    android:textStyle="normal"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:layout_weight="1"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#F0F0F0"
                    android:layout_marginLeft="14dp"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_marginTop="0dp">

            <!--<Button-->
                <!--android:id="@+id/editButton"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="120dp"-->
                <!--android:text="Edit"-->
                <!--android:layout_marginRight="10dp"/>-->

            <ImageButton
                android:id="@+id/editButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:src="@drawable/edit"
                android:background="#00000000"
                android:scaleType="centerInside"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"/>


        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="50dp"
        android:orientation="vertical"
        android:background="#00000000"
        android:layout_weight="2">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#F0F0F0" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="This is 1 Fragment"
                android:textSize="15sp"
                android:textColor="#000"
                android:textStyle="normal"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:layout_weight="1"
                />

            <Switch
                android:id="@+id/Switch01"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:switchMinWidth="20dp"
                android:textOn=""
                android:textOff=""
                android:thumb="@drawable/thumb"
                android:track="@drawable/track"
                android:layout_gravity="end"
                />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#F0F0F0" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="This is 2 Fragment"
                android:textSize="15sp"
                android:textColor="#000"
                android:textStyle="normal"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:layout_weight="1"
                />

            <Switch
                android:id="@+id/Switch02"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:switchMinWidth="20dp"
                android:textOn=""
                android:textOff=""
                android:thumb="@drawable/thumb"
                android:track="@drawable/track"
                android:layout_gravity="end"
                />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#F0F0F0" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="This is 3 Fragment"
                android:textSize="15sp"
                android:textColor="#000"
                android:textStyle="normal"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:layout_weight="1"
                />

            <Switch
                android:id="@+id/Switch03"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:switchMinWidth="20dp"
                android:textOn=""
                android:textOff=""
                android:thumb="@drawable/thumb"
                android:track="@drawable/track"
                android:layout_gravity="end"
                />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#F0F0F0" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="This is 4 Fragment"
                android:textSize="15sp"
                android:textColor="#000"
                android:textStyle="normal"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:layout_weight="1"
                />

            <Switch
                android:id="@+id/Switch04"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:switchMinWidth="20dp"
                android:textOn=""
                android:textOff=""
                android:thumb="@drawable/thumb"
                android:track="@drawable/track"
                android:layout_gravity="end"
                />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#F0F0F0" />

    </LinearLayout>







</LinearLayout>