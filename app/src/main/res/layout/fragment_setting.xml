<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#d3d7d4">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="50dp"
        android:orientation="vertical"
        android:background="#fff"
        android:layout_weight="1">

        <TextView
            android:id="@+id/userName"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:gravity="start"
            android:text="User Name:" />

        <TextView
            android:id="@+id/userPhone"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:gravity="start"
            android:text="Telephone:" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="50dp"
        android:orientation="vertical"
        android:background="#fff"
        android:layout_weight="2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="This is 1 Fragment"
                android:layout_weight="1"
                />

            <Switch
                android:id="@+id/Switch01"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:switchMinWidth="20dp"
                android:textOn=""
                android:textOff=""
                android:thumb="@drawable/thumb"
                android:track="@drawable/track"
                android:layout_gravity="end"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="This is 2 Fragment"
                android:layout_weight="1"
                />

            <Switch
                android:id="@+id/Switch02"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:switchMinWidth="20dp"
                android:textOn=""
                android:textOff=""
                android:thumb="@drawable/thumb"
                android:track="@drawable/track"
                android:layout_gravity="end"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="This is 3 Fragment"
                android:layout_weight="1"
                />

            <Switch
                android:id="@+id/Switch03"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:switchMinWidth="20dp"
                android:textOn=""
                android:textOff=""
                android:thumb="@drawable/thumb"
                android:track="@drawable/track"
                android:layout_gravity="end"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="This is 4 Fragment"
                android:layout_weight="1"
                />

            <Switch
                android:id="@+id/Switch04"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:switchMinWidth="20dp"
                android:textOn=""
                android:textOff=""
                android:thumb="@drawable/thumb"
                android:track="@drawable/track"
                android:layout_gravity="end"
                />
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="50dp"
        android:orientation="vertical"
        android:background="#D3D7D7"
        android:layout_weight="1">

    </LinearLayout>







</LinearLayout>